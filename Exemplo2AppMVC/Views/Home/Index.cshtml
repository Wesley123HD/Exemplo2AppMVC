@model Exemplo2AppMVC.Models.Usuario
@{
    ViewBag.Title = "Index";
}

<h2>Cadastro de Produts Não Perecíveis</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

<fieldset>
    <legend>Dados do produto</legend>
    <div class="editor-label">
        @Html.LabelFor(models => Model.Codigo)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Codigo)
        @Html.ValidationMessageFor(model => model.Codigo)
    </div>
    <div class="editor-label">
        @Html.LabelFor(models => Model.Nome)
    </div>
    <div class="editor-field">
        @Html.TextAreaFor(model => model.Nome)
        @Html.ValidationMessageFor(model => model.Nome)
    </div>
    <div class="editor-label">
        @Html.LabelFor(models => Model.Descricao)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Descricao)
        @Html.ValidationMessageFor(model => model.Descricao)
    </div>
    <div class="editor-label">
        @Html.LabelFor(models => Model.Peso)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Peso)
        @Html.ValidationMessageFor(model => model.Peso)
    </div>
    <div class="editor-label">
        @Html.LabelFor(models => Model.Categoria)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Categoria)
        @Html.ValidationMessageFor(model => model.Categoria)
    </div>
    <div class="editor-label">
        @Html.LabelFor(models => Model.ValorUnit)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.ValorUnit)
        @Html.ValidationMessageFor(model => model.ValorUnit)
    </div>

    <p><input type="submit" value="Cadastrar" /></p>
    <p>@Html.ActionLink("Avançar", "Resultado")</p>
</fieldset>

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval");
    }
}
